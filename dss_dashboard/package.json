{
  "name": "dss-dashboard",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build-task:scss-compile": "node-sass-chokidar --source-map true src/scss/ -o dist/stylesheets",
    "build-task:autoprefixer": "postcss dist/stylesheets/*.css --use autoprefixer -d dist/stylesheets",
    "sass:build": "npm-run-all -p build-task:*",
    "sass:watch": "chokidar 'src/scss/**/*.scss' -c 'npm run sass:build'",
    "nodemon:dev": "nodemon ./bin/www localhost 3000",
    "dev": "npm-run-all -p sass:* nodemon:dev",
    "test": "node ./bin/www"
  },
  "dependencies": {
    "autoprefixer": "^7.1.6",
    "body-parser": "~1.18.2",
    "chokidar-cli": "^1.2.0",
    "cookie-parser": "~1.4.3",
    "debug": "~2.6.9",
    "express": "~4.15.5",
    "morgan": "~1.9.0",
    "node-sass-chokidar": "0.0.3",
    "npm-run-all": "^4.1.1",
    "postcss-cli": "^4.1.1",
    "pug": "3.0.2",
    "serve-favicon": "~2.4.5"
  },
  "devDependencies": {
    "nodemon": "^1.12.1"
  }
}
